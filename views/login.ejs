<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>

    <% include partials/head %>
    <script src="javascripts/loginValidator.js"></script>
    <script src="javascripts/apiFunctions.js"></script>


</head>
<body>

<div class="alert alert-light" role="alert">
    <h3>link to my <a href="http://localhost:3000/readme" class="alert-link" target="_blank">README</a></h3>
</div>

<div class="alert alert-secondary" role="alert">

    <form action = "/weatherForecast" method="post">
        <h1>Enter Email and password</h1>
        <p>Please fill in this form to login to your account.</p>
        <hr>
        <div>
            <input type="text" class="form-control mb-3" id="Email" name="Email" placeholder="Enter email"
                   aria-label="Email">
        </div>
        <div>
            <input type="password" class="form-control mb-3" id="Password" name="Password"
                   placeholder="Enter password" aria-label="Password">
        </div>

        <a class = "mb-3" href ='/register'>are you not registered?</a><br><br>

        <div class="buttons">
            <button type="submit" id="submit-button" class="btn btn-primary mb-3">Login</button>
        </div>
    </form>
</div>

<% if (showError===true) { %>
    <div class='alert alert-danger' >
        <p><%= errorMsg %></p>
    </div>
<% } %>

<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" id="errors-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Correct the following problems</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="error-body"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
</div>
<script>
    window.addEventListener('DOMContentLoaded', (event) => {
        event.preventDefault();
        document.getElementById('submit-button').addEventListener('click', loginValidator.validateForm);
    });
</script>

</body>
<% include partials/script %>
</html>